<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:weightSum="1">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Save File As:"
            android:id="@+id/saveFileView"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"/>

    <EditText
            android:layout_width="342dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/saveFileAs"
            android:textColor="#ff777777"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:hint="@string/save_file" android:layout_weight="0.04"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/whitespace"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp" />

    <Button
            android:id="@+id/ok_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ok" android:layout_gravity="right"
            android:layout_marginRight="20dp"/>

</LinearLayout>