<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/loc_name"
            android:id="@+id/locationNameTag"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:textColor="#ff2a8add"/>

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/location_name"
            android:textColor="#ff2a8add"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:hint="@string/loc_name"
            android:textColorHint="#742ea6ff"
            android:layout_marginRight="30dp"
            app:bootstrapBrand="primary"
            app:roundedCorners="true"
            app:bootstrapSize="lg"
            app:showOutline="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/loc_info"
            android:id="@+id/locationInfoTag"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:textColor="#ff2a8add"/>

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/location_info"
            android:textColor="#ff2a8add"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:hint="@string/loc_info"
            android:layout_weight="0.16"
            android:layout_marginRight="30dp"
            app:bootstrapBrand="primary"
            app:roundedCorners="true"
            app:showOutline="true"
            app:bootstrapSize="lg"
            android:textColorHint="#742ea6ff"/>

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/map_imageButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:bootstrapText="Add Photo of Where You Are"
            style="@style/wrapping_button"
            app:bootstrapSize="lg"
            app:bootstrapBrand="primary"
            app:roundedCorners="true"
            app:showOutline="true"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:minHeight="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/whitespace"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ok"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            style="@style/wrapping_button"
            app:bootstrapSize="lg"
            app:bootstrapBrand="primary"
            app:roundedCorners="true"
            app:showOutline="true"/>

    </LinearLayout>
</ScrollView>